        mc:Ignorable="d"
        Title="MainWindow" MinWidth="906" MinHeight="376" Height="400" Width="700" WindowStyle="None" Background="#01000000" AllowsTransparency="True">
    <WindowChrome.WindowChrome>
        <WindowChrome 
            CaptionHeight="0"
