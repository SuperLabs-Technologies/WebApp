    </WindowChrome.WindowChrome>
    <Grid Focusable="True">
        <Border x:Name="Renderbox" Background="#01000000">
            <Wpf:WebView2 x:Name="WebRenderer" Margin="5,5,5,5"/>
        </Border>
    </Grid>
</Window>
